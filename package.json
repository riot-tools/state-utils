{
    "name": "@riot-tools/state-utils",
    "version": "1.1.2",
    "description": "State utils used across riot-tool projects",
    "license": "MIT",
    "main": "dist/index.es.js",
    "module": "dist/index.es.js",
    "jsnext:main": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "authors": [
        "Danilo Alonso <damusix@gmail.com>"
    ],
    "scripts": {
        "start": "npm run test --recursive --watch",
        "test": "mocha -r ./tests/_setup.js -r ts-node/register 'tests/**/*.ts'",
        "build": "rollup -c"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/riot-tools/state-utils.git"
    },
    "bugs": {
        "url": "https://github.com/riot-tools/state-utils/issues"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "keywords": [
        "state",
        "utils",
        "diff",
        "deep-equals"
    ],
    "devDependencies": {
        "@babel/core": "^7.14.2",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.14.2",
        "@babel/register": "^7.13.16",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.31",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "benchmark": "^2.1.4",
        "chai": "^4.3.4",
        "fast-check": "^2.14.0",
        "fast-deep-equal": "^3.1.3",
        "husky": "^6.0.0",
        "jsdom": "^16.5.3",
        "mocha": "^8.4.0",
        "rollup": "^2.47.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "footer-max-line-length": [
                0,
                "always"
            ],
            "body-max-line-length": [
                0,
                "always"
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "release": {
        "ci": false,
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            {
                "name": "next",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/changelog",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/git"
        ]
    }
}
